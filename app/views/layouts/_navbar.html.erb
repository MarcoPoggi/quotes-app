<header>
  <% if user_signed_in? %>
    <div>
      <%= current_company.name %>
    </div>
    <div>
      <%= current_user.name %>
    </div>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path %>
  <% end %>
</header>
