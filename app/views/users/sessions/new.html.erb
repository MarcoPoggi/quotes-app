<main class="form_container">
  <h2 class="form_container--title">Quotes App</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class:"form_container--form" }) do |f| %>
    <div class="form_container--form--fields">
      <div class="field">
        <%= f.label :email, hidden: true %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
      </div>
      <div class="field">
        <%= f.label :password, hidden: true%><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
    <div class="form_container--form--actions">
      <%= f.submit "Log in", class:"button-link action-submit" %>
    </div>
  <% end %>
  <div class="form_container--more_links">
    <%= render "users/shared/links" %>
  </div>
</main>
