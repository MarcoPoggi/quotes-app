<main class="form_container">
  <h2 class="form_container--title">Quotes App</h2>
  <%= turbo_frame_tag dom_id(resource) do %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:"form_container--form" }) do |f| %>
      <div class="form_container--form--fields">
        <hr>
        <span class="fields_category">Company</span>
        <div class="field">
          <%= f.label :company_id, hidden: true %><br />
          <%= f.select :company_id, Company.all.pluck(:name,:id) %>
        </div>
        <span class="fields_category">Personal Information</span>
        <div class="field">
          <%= f.label :email, hidden: true %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
        </div>
        <div class="field">
          <%= f.label :password,  hidden: true %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",placeholder: "password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation,  hidden: true%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "password confirmation" %>
        </div>
      </div>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="form_container--form--actions">
        <%= f.submit "Sign up", class:"button-link action-submit" %>
        <%= render "users/shared/links" %>
      </div>
    <% end %>
  <% end %>
</main>
